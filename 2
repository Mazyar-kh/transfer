  - url: http://localhost:2020
paths:
  /proxy/{id}:
    get:
      summary: Proxy Request
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: object
      x-wso2-endpoint:
        endpoints:
          - url: http://localhost/nginx/1.0.0/{id}
            timeout: 5000
            method: GET

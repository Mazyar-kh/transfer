swagger: '2.0'
info:
  title: My API
  version: 1.0.0
host: localhost
basePath: /
paths:
  /helloWorld/api:
    get:
      tags:
        - HelloWorld
      summary: Returns a greeting as JSON
      responses:
        '200':
          description: A successful HTTP response with status code 200
          schema:
            $ref: '#/components/schemas/HelloWorldResponse'

      parameters:
        - $ref: '#/definitions/HelloWorldParameters'
      consumes:
        - application/json
      produces:
        - application/json
    
components:
  schemas:
    HelloWorldParameters:
      type: object
      properties:
        name:
          type: string
          example: Alice
      required:
        - name

    HelloWorldResponse:
      type: object
      properties:
        greeting:
          type: string
          example: Hi, Alice!
          format: string
      required:
        - greeting
